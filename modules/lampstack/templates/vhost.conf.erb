<VirtualHost *:80>
	ServerName www.<%= @title %>.com
	ServerAlias <%= @title %>.com
	DocumentRoot /home/xubuntu/public_html

	ErrorLog ${APACHE_LOG_DIR}/error.log
	CustomLog ${APACHE_LOG_DIR}/access.log combined

</VirtualHost>

<Directory "/home/xubuntu/public_html">
	AllowOverride ALL
	Require all granted
</Directory>
